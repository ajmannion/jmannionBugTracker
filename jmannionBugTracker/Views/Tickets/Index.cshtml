@model IEnumerable<jmannionBugTracker.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2> Ticket Index</h2>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    
        <thead>
            <tr>
        <th>
           @* @Html.DisplayNameFor(model => model.AssignedToUser.FirstName)*@
            <p>Assigned User</p>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.OwnerUser.FirstName)*@
            <p>Onwer</p>
        </th>
        <th>
           @* @Html.DisplayNameFor(model => model.Project.Name)*@
            <p>Project Name</p>
        </th>
        <th>
           @* @Html.DisplayNameFor(model => model.TicketPriority.Name)*@
            <p>Priority</p>
        </th>
        <th>
           @* @Html.DisplayNameFor(model => model.TicketStatus.Name)*@
            <p>Status</p>
        </th>
        <th>
           @* @Html.DisplayNameFor(model => model.TicketType.Name)*@
            <p>Ticket Type</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Updated)
        </th>
        <th></th>
    </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AssignedToUser.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerUser.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketPriority.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketStatus.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Updated)
        </td>
        <td>
            <button class="btn-xs btn-default">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </button> |
            <button class="btn-xs btn-default">
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                </button> |
            <button class="btn-xs btn-default">
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) 
                </button> |
            <button class="btn-xs btn-default">
                @Html.ActionLink("Assign tickets", "AssignTicket", new { id = item.Id })
                </button>
</td>
    </tr>
}

</table>
